<%= form_for @micropost do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :title, "Title" %><br />
    <%= f.text_area :title %>
  <div class="field">
    <%= f.label :content, "Content" %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :category, "Category:" %>
    <%= select(:micropost, :category, Micropost::CATEGORIES) %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>


