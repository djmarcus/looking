<tr>
  <td class="micropost">
    <span class="title"><%= link_to micropost.title, micropost %></span></br>
    <span class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    </span>
   </td>
   <% if ((current_user and (current_user.admin? or micropost.user==current_user ))) %>
   <td>
     <%= link_to "delete", micropost, :method => :delete,
                                      :confirm => "You sure?",
                                      :title => micropost.content %>
   </td>
   <% end %>
</tr>
